" Bundles
Bundle 'bling/vim-airline'
Bundle 'paranoida/vim-airlineish'
Bundle 'tpope/vim-rails'

" == Colors =================================================================

colorscheme mango

set background=dark     " you can use `dark` or `light` as your background

set guifont=DejaVu\ Sans\ Mono\ for\ Powerline\ 12

:hi CursorLineNr term=bold ctermfg=Yellow gui=bold guifg=Yellow
:hi LineNr       font='monospace 8' guifg=#BCBCBC guibg=#232526

set cursorline

color mango

" == Mouse ==================================================================

" Enable mouse in all modes. -> https://bitheap.org/mouseterm/
set mouse=a

" Set mouse type to xterm.
set ttymouse=xterm

" == Airline ==================================================================

set noshowmode " Hide the default mode text (e.g. -- INSERT -- below the statusline) "
let g:airline_powerline_fonts=1
set ttimeoutlen=50
let g:airline_theme = 'airlineish'

" == Shell ==================================================================

" Set the shell Vim uses for external commands to bash in such a way that it'll source ~/.bash_profile
" set shell=/bin/zsh\ --login

" == End or start of line in Insert Mode ====================================
" Like in Terminal

inoremap <C-e> <C-o>$
inoremap <C-a> <C-o>0

" ===========================================================================

" allow multiple pastes of the same content when pasting in visual mode.
vnoremap p pgvy

" better indent for li and p
let g:html_indent_tags = 'li\|p'

" show number of matches after a search
nmap <leader>c :%s///gn<cr>

" Clean Dreamweaver fuck ups
map <leader>q :%s/\v(\w)(:)(\S)/\1\2 \3/g<cr>

" Syntax coloring lines that are too long just slows down the world
set synmaxcol=256

" Highlight everyting that is longer than 80 chars
highlight OverLength ctermbg=16 ctermfg=41 guibg=#292929
match OverLength /\%81v.*/
let c_space_errors=1

" Ag
" brew install the_silver_searcher
" pacman -S the_silver_searcher
" apt-get install silversearcher-ag
let g:ackprg = 'ag --nogroup --nocolor --column'

" Highlight words to avoid in production
highlight TechWordsToAvoid ctermbg=red ctermfg=white
match TechWordsToAvoid /\cconsole\|var_dump\|print_r/
autocmd BufWinEnter * match TechWordsToAvoid /\cconsole\|var_dump\|print_r/
autocmd InsertEnter * match TechWordsToAvoid /\cconsole\|var_dump\|print_r/
autocmd InsertLeave * match TechWordsToAvoid /\cconsole\|var_dump\|print_r/
autocmd BufWinLeave * call clearmatches()
