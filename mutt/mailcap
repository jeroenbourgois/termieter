# MS Word documents
application/msword; $TRM/mutt/functions/view_attachment %s "-" '/Applications/TextEdit.app'

# Images
image/jpg; $TRM/mutt/functions/view_attachment %s jpg
image/jpeg; $TRM/mutt/functions/view_attachment %s jpg
image/pjpeg; $TRM/mutt/functions/view_attachment %s jpg
image/png; $TRM/mutt/functions/view_attachment %s png
image/gif; $TRM/mutt/functions/view_attachment %s gif

# PDFs
application/pdf; $TRM/mutt/functions/view_attachment %s pdf

# HTML
text/html; $TRM/mutt/functions/view_attachment %s html

# Unidentified files
application/octet-stream; $TRM/mutt/functions/view_attachment %s "-"
